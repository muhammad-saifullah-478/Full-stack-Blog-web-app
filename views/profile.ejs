        <style>
            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: Arial, sans-serif;
            }

            header {
                background-color: #0d47a1;
                color: #fff;
                padding: 15px 30px;
                display: flex;
                justify-content: space-between;
                align-items: center;
                box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            }

            .logo {
                font-size: 24px;
                font-weight: bold;
                letter-spacing: 1px;
            }

            nav {
                display: flex;
                gap: 20px;
            }

            nav a {
                color: white;
                text-decoration: none;
                font-weight: 500;
                transition: color 0.3s;
            }

            nav a:hover {
                color: #ffcc00;
            }

            .header-btn {
                background-color: #ff0000;
                color: #0d47a1;
                border: none;
                padding: 10px 20px;
                border-radius: 5px;
                font-weight: bold;
                cursor: pointer;
                transition: background-color 0.3s;
            }

            .header-btn:hover {
                background-color: #f43900;
            }

            @media (max-width: 768px) {
                nav {
                    display: none;
                    /* Hide on small screens or use hamburger later */
                }
            }

            * {
                margin: 0;
                padding: 0;
                box-sizing: border-box;
                font-family: sans-serif;
            }

            .hero {
                display: flex;
                align-items: center;
                justify-content: space-between;
                padding: 60px;
                background-color: #f0f4f8;
                flex-wrap: wrap;
            }

            .hero-image {
                flex: 1;
                padding: 20px;
            }

            .hero-image img {
                max-width: 100%;
                border-radius: 15px;
            }

            .hero-content {
                flex: 1;
                padding: 20px;
            }

            .hero-content h1 {
                font-size: 36px;
                color: #333;
                margin-bottom: 20px;
            }

            .hero-content p {
                font-size: 18px;
                color: #555;
                margin-bottom: 30px;
            }

            .hero-content button {
                padding: 12px 24px;
                font-size: 16px;
                background-color: #0066ff;
                color: white;
                border: none;
                border-radius: 5px;
                cursor: pointer;
            }

            /* Slider container */
            .slider-container {
                width: 300%;
                animation: slide 15s infinite;
            }

            /* Individual slide */
            .slide {
                width: 33.333%;
                float: left;
            }

            /* Animation keyframes */
            @keyframes slide {

                0%,
                28% {
                    transform: translateX(0);
                }

                33%,
                61% {
                    transform: translateX(-33.333%);
                }

                66%,
                94% {
                    transform: translateX(-66.667%);
                }

                100% {
                    transform: translateX(0);
                }
            }

            /* Indicator styling */
            .slider-dot:checked+.dot-label {
                background-color: white;
                opacity: 1;
            }

            /* Hide radio buttons */
            .slider-radio {
                display: none;
            }

            /* Navigation arrows hover effect */
            .nav-arrow {
                transition: background-color 0.3s;
            }

            .hero-content button:hover {
                background-color: #004bcc;
            }

            @media (max-width: 768px) {
                .hero {
                    flex-direction: column;
                    text-align: center;
                }
            }
        </style>
    </head>



